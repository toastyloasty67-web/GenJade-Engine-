    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SPDVAULT Map Gen</title>
    <!-- JSZip for folder management -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <style>
        :root {
            --bg: #ffffff;
            --border: #000000;
            --font: 'Courier New', Courier, monospace;
        }

        body {
            margin: 0;
            background: var(--bg);
            font-family: var(--font);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            overflow: hidden;
            user-select: none;
        }

        .legend {
            position: absolute;
            top: 15px;
            display: flex;
            gap: 12px;
            font-size: 9px;
            padding: 5px 10px;
            background: #fff;
            border: 1px solid var(--border);
        }
        .legend-item { display: flex; align-items: center; gap: 4px; }
        .sq { width: 6px; height: 6px; border: 1px solid var(--border); }

        #mapCanvas {
            image-rendering: pixelated;
